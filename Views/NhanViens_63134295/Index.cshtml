@model IEnumerable<Project_63134295.Models.NhanVien>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}


<center><h2>DANH SÁCH NHÂN VIÊN</h2></center>

<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: red;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
        grid.Column("MaNV","Mã nhân viên"), //the model fields to display
        grid.Column("HoNV","Họ nhân viên"),
        grid.Column("TenNV","Tên nhân viên"),
        grid.Column("SoDT","Số điện thoại"),
        grid.Column("DiaChi","Địa chỉ"),
        grid.Column("NgaySinh","Ngày sinh",format:@<text> @item.NgaySinh.ToString("dd/MM/yyyy")</text>),
grid.Column("ChucVu","Chức vụ"),
grid.Column(format: (item) => Html.ActionLink("Cập nhật", "Edit", "NhanViens_63134295",new { id = item.MaNV },"NhanViens_63134295Controller")),
grid.Column(format: (item) => Html.ActionLink("Xem chi tiết", "Details","NhanViens_63134295", new { id = item.MaNV },"NhanViens_63134295Controller")),
grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","NhanViens_63134295", new { id = item.MaNV },"NhanViens_63134295Controller"))
}
)
    </div>
    <p>
        @Html.ActionLink("Thêm mới", "Create")|@Html.ActionLink("In danh sách", "PrintList")|@Html.ActionLink("Tìm Kiếm", "TimKiemNC")
    </p>
</body>

</html>