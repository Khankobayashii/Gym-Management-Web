@model IEnumerable<Project_63134295.Models.GoiTap>

@{
    ViewBag.Title = "DS";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}

<center><h2>DANH SÁCH GÓI TẬP</h2></center>

<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: red;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
        grid.Column("MaGoi","Mã Gói"), //the model fields to display
        grid.Column("TenGoi","Tên Gói"),
        grid.Column("Gia","Giá tiền"),
        grid.Column("Mota","Mô tả"),
        grid.Column(format: (item) => Html.ActionLink("Xóa gói", "Delete","GoiTaps_63134295","GoiTaps_63134295Controller")),
        grid.Column(format: (item) => Html.ActionLink("Đăng ký gói", "DangKy","GoiTaps_63134295","GoiTaps_63134295Controller")),
} 
)

    </div>
    <p>
        @Html.ActionLink("Thêm gói", "Create")|@Html.ActionLink("Tìm Kiếm", "TimKiemNC")
    </p>
</body>

</html>


