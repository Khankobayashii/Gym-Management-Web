<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/GD.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">
        <div class="container">
            <div class="col-xs-6">
                @Html.ActionLink("Fitness Club", "Index", "TrangChu_63134295", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="col-xs-6">
                <ul class="top-link">
                    <ul class="nav navbar-nav navbar-right">
                        @if (Session["Email"] != null)
                        {

                            <li><a class="nav-link" style="color:black;">Xin chào @Session["TenHienThi"]!</a></li>
                            <li>@Html.ActionLink("Đăng xuất", "Signout", "Account_63134295", new { area = "" }, new { @class = "nav-link" })</li>

                        }
                       
                    </ul>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>


</body>
</html>
